<resources>

  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/colorDivider</item>
  </style>


  <style name="Divider.Accent">
    <item name="android:background">@color/colorAccent</item>
  </style>

  <style name="SubHeader" parent="AppTheme.Widget.TextView">
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">fonts/Roboto-Medium.ttf</item>
  </style>

  <style name="ExpandedTitle" parent="AppTheme.Widget.TextView">
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
    <item name="android:textSize">@dimen/expanded_title_size</item>
  </style>

  <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/md_white_1000</item>
    <item name="android:textColor">@color/material_blue_500</item>
  </style>

  <style name="FullScreenDialog" parent="AppTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:background">@android:color/transparent</item>
  </style>
</resources>
