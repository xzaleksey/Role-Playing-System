<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:buttonStyle">@style/AppThemeBase.Widget.Button</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/AppThemeBase.Widget.AutoCompleteTextView
        </item>
        <item name="android:editTextStyle">@style/AppThemeBase.Widget.EditText</item>
    </style>


    <style name="AppTheme" parent="AppThemeBase">


    </style>

    <style name="AppThemeBase.TextWhite">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorHint">@color/white7</item>
        <item name="android:textColorSecondary">@color/white7</item>
    </style>

    <style name="AppThemeBase.Widget" />

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppThemeBase.Widget.EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppThemeBase.Widget.AutoCompleteTextView" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppThemeBase.Widget.Button" parent="Base.Widget.AppCompat.Button">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="AppThemeBase.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorTextPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorTextPrimary</item>
    </style>
</resources>
