<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:appContext="com.valyakinaleksey.roleplayingsystem.modules.mainscreen.view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_top_content_height"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_background_height"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/top_background" />

        <RelativeLayout
            android:id="@+id/top_actions_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginStart="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_arrow_back" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_between_elements"
                android:layout_toEndOf="@+id/iv_back"
                android:layout_toLeftOf="@+id/iv_edit"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_toStartOf="@+id/iv_edit"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/total_games"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_24"
                tools:text="Aleksey Valyakin" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/total_games"
                android:textColor="@color/white7"
                android:textSize="@dimen/dp_16"
                tools:text="Aleksey Valyakin" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_background"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/profile_avatar_top_margin"
            android:background="@drawable/profile_border"
            android:padding="6dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/profile_icon" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fab_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/avatar"
            android:layout_marginLeft="-30dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="-30dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_profile_edit"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_total_games_count"
            fontPath="fonts/rufina_regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_background"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@+id/avatar"
            android:layout_toStartOf="@+id/avatar"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_24"
            tools:ignore="MissingPrefix"
            tools:text="56" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_games_count"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/avatar"
            android:layout_toStartOf="@+id/avatar"
            android:gravity="center"
            android:text="@string/total_games"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_master_games_count"
            fontPath="fonts/rufina_regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_background"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_24"
            tools:ignore="MissingPrefix"
            tools:text="23" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_master_games_count"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:gravity="center"
            android:text="@string/master_games"
            android:textColor="@color/colorPrimary" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_bottom_divider" />

    </RelativeLayout>

    <include layout="@layout/recycler_view" />
</LinearLayout>