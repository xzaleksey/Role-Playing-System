<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_184">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/result"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/dp_36"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_max_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_result_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/colorDiceSecondary"
            android:textSize="@dimen/dp_12"
            tools:text="1 (max)" />

        <Button
            android:id="@+id/btn_rethrow_dices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/accent_button"
            android:text="@string/rethrow_all_dices"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

</android.support.v7.widget.CardView>