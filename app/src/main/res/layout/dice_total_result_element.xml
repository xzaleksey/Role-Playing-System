<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_184"
                                    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_result"
                  android:layout_marginTop="@dimen/dp_20"
                  android:textColor="@color/colorTextPrimary"
                  android:textSize="@dimen/sp_15"
                  android:layout_centerHorizontal="true"
                  android:text="@string/result"
                  android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_result_value"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/colorTextPrimary"
                android:layout_below="@+id/tv_result"
                android:textSize="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                tools:text="1"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_max_result_value"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/colorDiceSecondary"
                android:layout_below="@+id/tv_result_value"
                android:textSize="@dimen/dp_12"
                android:layout_centerHorizontal="true"
                tools:text="1 (max)"
                android:layout_height="wrap_content"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/accent_button"
                android:textColor="@android:color/white"
                android:text="@string/rethrow_all_dices"
                android:textSize="@dimen/sp_15"
                android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>