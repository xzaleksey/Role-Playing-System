<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_component_lists_three_line_height"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="@dimen/material_component_lists_right_padding"
    android:paddingRight="@dimen/material_component_lists_right_padding"
    android:paddingTop="@dimen/material_component_text_fields_floating_label_padding_above_label_text">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/material_layout_avatar"
        android:layout_height="@dimen/material_layout_avatar"
        android:layout_marginLeft="@dimen/material_component_lists_icon_left_padding"
        android:layout_marginStart="@dimen/material_component_lists_icon_left_padding"
        tools:src="@drawable/ic_add_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/material_component_lists_text_left_padding"
        android:layout_marginStart="@dimen/material_component_lists_text_left_padding"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_password"
            android:layout_width="@dimen/material_layout_icon"
            android:layout_height="@dimen/material_layout_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="2dp"
            android:tint="#4D4D4D"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_lock_outline_black_24px"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_password"
            android:layout_toStartOf="@id/iv_password"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/material_component_lists_two_line_text_size"
            tools:text="line1" />

        <TextView
            android:id="@+id/master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
            tools:text="line2" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/master_name"
            android:maxLines="1"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
            tools:text="line3" />
    </RelativeLayout>

</RelativeLayout>