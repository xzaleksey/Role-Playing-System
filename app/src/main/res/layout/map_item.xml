<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/common_margin_between_elements"
    android:paddingLeft="@dimen/material_layout_keylines_screen_edge_margin"
    android:paddingRight="@dimen/material_layout_keylines_screen_edge_margin"
    android:paddingTop="@dimen/common_margin_between_elements"
    >
  <android.support.v7.widget.SwitchCompat
      android:id="@+id/switcher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/common_margin_between_elements"
      android:layout_marginStart="@dimen/common_margin_between_elements"
      android:visibility="gone"
      tools:visibility="visible"
      />
  <TextView
      android:id="@+id/checkbox_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/switcher"
      android:layout_toStartOf="@+id/switcher"
      android:visibility="gone"
      tools:text="only master"
      tools:visibility="visible"
      />
  <android.support.v7.widget.AppCompatImageView
      android:id="@+id/icon"
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/checkbox_text"
      android:layout_toStartOf="@+id/checkbox_text"
      android:scaleType="fitStart"
      tools:src="@drawable/ic_done_black_24dp"
      />


</RelativeLayout>