<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_component_text_fields_floating_label_height"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:paddingEnd="@dimen/material_component_lists_right_padding"
    android:paddingRight="@dimen/material_component_lists_right_padding"
    android:paddingTop="@dimen/material_component_text_fields_floating_label_padding_above_label_text">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/material_layout_avatar"
        android:layout_height="@dimen/material_layout_avatar"
        android:layout_marginLeft="@dimen/material_component_lists_icon_left_padding"
        android:layout_marginStart="@dimen/material_component_lists_icon_left_padding"
        tools:src="@drawable/ic_add_black_24dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/material_component_lists_text_left_padding"
        android:layout_marginStart="@dimen/material_component_lists_text_left_padding">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/arrow_right"
            android:layout_width="@dimen/material_layout_icon"
            android:layout_height="@dimen/material_layout_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_keyboard_arrow_right"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/primary_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow_right"
            android:layout_toStartOf="@+id/arrow_right"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/material_component_lists_two_line_text_size"
            tools:text="line1" />

        <TextView
            android:id="@+id/secondary_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/primary_line"
            android:layout_toLeftOf="@+id/arrow_right"
            android:layout_toStartOf="@+id/arrow_right"
            android:maxLines="1"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
            tools:text="line2" />
    </RelativeLayout>

</RelativeLayout>