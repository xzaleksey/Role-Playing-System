<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:paddingBottom="12dp"
                android:paddingEnd="@dimen/material_component_lists_right_padding"
                android:paddingRight="@dimen/material_component_lists_right_padding"
                android:paddingTop="12dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginStart="@dimen/material_layout_keylines_screen_edge_margin"
            android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_minimum_size"
                android:layout_height="@dimen/icon_minimum_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_keyboard_arrow_right"
                android:layout_centerVertical="true"
        />
        <TextView
                android:id="@+id/primary_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_component_lists_two_line_text_size"
                tools:text="line1"/>

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon"
                android:visibility="gone"
                tools:visibility="visible"
                app:srcCompat="@drawable/crown"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_below="@id/primary_line"
                android:layout_width="@dimen/icon_minimum_size"
                android:layout_height="@dimen/icon_minimum_size"/>


        <TextView
                android:id="@+id/secondary_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/primary_line"
                android:layout_toRightOf="@+id/icon"
                android:layout_toEndOf="@+id/icon"
                android:maxLines="2"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
                tools:text="line3"/>
    </RelativeLayout>

</RelativeLayout>