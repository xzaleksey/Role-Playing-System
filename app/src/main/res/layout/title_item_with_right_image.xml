<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <include layout="@layout/divider" />

  <RelativeLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_component_lists_single_line_height"
      android:background="?attr/selectableItemBackground"
      android:paddingBottom="@dimen/common_margin_between_elements"
      android:paddingLeft="@dimen/material_layout_keylines_screen_edge_margin"
      android:paddingRight="@dimen/material_layout_keylines_screen_edge_margin"
      android:paddingTop="@dimen/common_margin_between_elements"
      >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/material_layout_icon"
        android:layout_height="@dimen/material_layout_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_expand_more_black_24dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_icon"
        android:layout_toStartOf="@+id/iv_icon"
        tools:text="title"
        style="@style/ExpandedTitle"
        />

  </RelativeLayout>


</LinearLayout>