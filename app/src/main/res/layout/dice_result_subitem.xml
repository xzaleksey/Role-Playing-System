<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_2"
    android:paddingLeft="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_2"
    tools:ignore="RtlSymmetry">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_main_dice"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_2"
        android:tint="@color/colorDiceResult"
        tools:src="@drawable/dice_d4" />


    <TextView
        android:id="@+id/tv_dice_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_toEndOf="@+id/iv_main_dice"
        android:layout_toRightOf="@+id/iv_main_dice"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/sp_12"
        tools:text="1" />


    <FrameLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/btn_rethrow_dices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/rethrow"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_main_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_dice_count"
        android:layout_toLeftOf="@+id/right_container"
        android:layout_toRightOf="@+id/tv_dice_count"
        android:layout_toStartOf="@+id/right_container"
        android:gravity="center"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/sp_12"
        tools:text="1" />
</RelativeLayout>
