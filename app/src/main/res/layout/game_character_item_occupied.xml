<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_margin_between_elements"
    android:layout_marginRight="@dimen/common_margin_between_elements"
    android:layout_marginBottom="@dimen/common_margin_between_elements"
    app:cardCornerRadius="2dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/activity_vertical_margin"
      >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/character_avatar_width"
        android:layout_height="@dimen/character_avatar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_media_route_connecting_06_light"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/character_avatar_height"
        android:layout_toEndOf="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        >
      <TextView
          android:id="@+id/character_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/activity_vertical_margin"
          android:layout_marginStart="@dimen/activity_vertical_margin"
          android:singleLine="true"
          android:textColor="@color/colorTextPrimary"
          android:textSize="@dimen/material_component_lists_single_line_text_size"
          tools:text="Осборн"
          />

      <TextView
          android:id="@+id/character_class_race"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/character_name"
          android:layout_marginLeft="@dimen/activity_vertical_margin"
          android:layout_marginStart="@dimen/activity_vertical_margin"
          android:maxLines="3"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/material_component_lists_single_line_text_size"
          tools:text="Полуэльф, воин"
          />

      <RelativeLayout
          android:id="@+id/user_container"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_alignParentBottom="true"
          android:paddingLeft="@dimen/activity_vertical_margin"
          android:paddingStart="@dimen/activity_vertical_margin"
          tools:ignore="RtlSymmetry"
          >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_small_size"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/material_component_lists_right_padding"
            android:layout_marginRight="@dimen/material_component_lists_right_padding"
            tools:src="@drawable/ic_done_black_24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/user_avatar"
            android:layout_toRightOf="@id/user_avatar"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/user_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorTextPrimary"
              tools:text="Виктория"
              />
          <TextView
              android:id="@+id/user_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorTextSecondary"
              android:textSize="12sp"
              tools:text="учавствовала в 8 играх"
              />
        </LinearLayout>
      </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@id/user_container"
          android:layout_marginBottom="@dimen/common_margin_between_elements"
          android:layout_marginLeft="@dimen/activity_vertical_margin"
          android:layout_marginStart="@dimen/activity_vertical_margin"
          android:text="@string/player"
          android:textColor="@color/accent"
          android:textSize="12sp"
          />

    </RelativeLayout>
  </RelativeLayout>

</android.support.v7.widget.CardView>